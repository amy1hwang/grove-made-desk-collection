  height: auto;
  margin-right: 50px;
}

.left {
  display: flex;
  align-items: center;
  a {
    margin-right: 50px;
    text-decoration: none;
    @include wu(2px, 1em, 300);
  }
}

.cart-container {
  position: relative;
  width: 50px;
  height: 30px;
  &:hover {
    .cart-clicked {
      height: auto;
      opacity: 1;
    }
  }
}

.cart{
  width: 50px;
  h1 {
    display: inline-block;
    margin-left: 5px;
    @include wu(null, 1.2em, 300);
    text-decoration: none;
  }
  img {
    width: 25px;
    height: auto;
  }
}

.cart-clicked {
  z-index: 3;
  width: 424px;
  position: absolute;
  top: 58px;
  right: -25px;
  height: 0;
  overflow: hidden;
  opacity: 0;
  transition: opacity .5s ease-out;
}

.cart-header {
  background: $hdr-gray;
  width: 100%;
  height: 70px;
  display: flex;
  align-items: center;
  a {
    padding-left: 20px;
    @include wu(5px, 1em, 300);
    text-decoration: none;
  }
}
.cart-main {
  background: #F2F2F2;
  padding: 14px 16px;
  .added-item {
    background: white;
  }
  .subtotal {
    margin-top: 14px;
    display: flex;
    justify-content: space-between;
    font-size: 1em;
    font-weight: 300;
  }
  .checkout-btn {
    width: 392px;
    height: 44px;
    border: none;
    border-radius: 0;
    background: $hdr-gray;
    margin: 14px 0;
    @include wu(12px, 18px, 300);
    &:hover, &:active, &:focus {
      outline: none;
      border: none;
    }
  }
  h4 {
    @include wu(2.75px, 11px, 200);
    color: #E76E7D;
  }
